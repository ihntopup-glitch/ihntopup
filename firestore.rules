rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- ğŸ”§ Utility Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- ğŸ‘¤ Users Collection ---
    match /users/{userId} {
      allow get: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId && request.resource.data.id == request.auth.uid;
      allow update, delete: if request.auth.uid == userId || isAdmin();
    }

    // --- ğŸ›’ Orders (Public Read, Secure Write) ---
    match /orders/{orderId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // --- ğŸ’° User Transactions ---
    match /users/{userId}/transactions/{transactionId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // --- ğŸŸï¸ User Coupons ---
    match /users/{userId}/coupons/{userCouponId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // --- ğŸ§© Categories ---
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ’³ Top-up Cards ---
    match /top_up_cards/{topUpCardId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ’¸ Coupons (Admin Control) ---
    match /coupons/{couponId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ‘¥ Referrals ---
    match /referrals/{referralId} {
      allow get, list: if false; // TBD
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ–¼ï¸ Banners ---
    match /banners/{bannerId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ« Support Tickets ---
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list, update, delete: if isAdmin();
    }

    // --- ğŸ“¢ Notices ---
    match /notices/{noticeId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ’³ Payment Methods ---
    match /payment_methods/{methodId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // --- ğŸ’¼ Wallet Top-up Requests ---
    match /wallet_top_up_requests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow list, update, delete: if isAdmin();
    }
  }
}